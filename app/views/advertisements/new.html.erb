<h1>New Advertisement</h1>

<div class="row">
    <div class="col-md-4">
        <p>Guidelines for Ads</p>
        <ul>
            <li>Make sure it sticky.</li>
        </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @advertisement do |whatever| %>
            <div class="form-group">
            <%= whatever.label :title %>
            <%= whatever.text_field :title, class: 'form-control', placeholder: "Enter Ad title" %>
            </div>
            <div class="form-group">
                <%= whatever.label :copy %>
                <%= whatever.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter Ad copy" %>
            </div>
            <div class="form-group">
                <%= whatever.label :price %>
                <%= whatever.text_area :price, rows: 8, class: 'form-control', placeholder: "Enter Ad price" %>
            </div>
            <div class="form-group">
                <%= whatever.submit "Save", class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>
